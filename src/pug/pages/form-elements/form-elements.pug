extends ../../layout/main

block variables
  - var title = 'Form Elements'
  - var description = 'Form Elements description'

block content
  .container
    include ../../components/logo/logo
    +logo('grey')
    //- all form elements included in layout/main.pug
    .form-elements-wrapper
      .form-elements-container
        +input-field({heading: 'text field', 
                      status: 'default', 
                      type: 'text', 
                      placeholder: 'Email'})
        +input-field({heading: 'text field', 
                      status: 'hover / focus', 
                      type: 'text', 
                      placeholder: 'Email', 
                      value: 'This is pretty awesome',
                      class: 'focused'})
        +input-field({heading: 'dropdown', 
                      status: 'default', 
                      type: 'text', 
                      placeholder: 'Сколько гостей', 
                      value: 'Сколько гостей',
                      class: 'dropdown',
                      isDropdown: true,
                      readonly: 'readonly',
                      whatToDoWithValues: 'count',
                      dropdownData: [
                      {key: 'взрослые',value: '0'},
                      {key: 'дети',value: '0'},
                      {key: 'младенцы',value: '0'}]})
        +input-field({heading: 'masked text field', 
                      status: 'default', 
                      type: 'text',
                      pattern: 'dd.MM.yyyy', 
                      placeholder: 'ДД.ММ.ГГГГ', 
                      value: '',
                      class: ''})
        .form-elements-short-container
          +input-field-subscription({heading: 'subscription text field', 
                                    status: '', 
                                    type: 'email', 
                                    placeholder: 'Email', 
                                    value: '',
                                    class: ''})

        br
        .form-elements-short-container
          +input-field({heading: 'dropdown', 
                        status: 'default', 
                        type: 'text', 
                        placeholder: 'Комнаты', 
                        value: 'Комнаты',
                        class: 'dropdown',
                        isDropdown: true,
                        readonly: 'readonly',
                        whatToDoWithValues: 'toString',
                        dropdownData: [
                        {key: 'спальни',value: '2'},
                        {key: 'кровати',value: '2'},
                        {key: 'ванные комнаты',value: '0'}]})
          +input-field({heading: 'dropdown', 
                      status: 'default', 
                      type: 'text', 
                      placeholder: 'Комнаты', 
                      value: 'Комнаты',
                      class: 'dropdown focused',
                      isDropdown: true,
                      readonly: 'readonly',
                      whatToDoWithValues: 'toString',
                      dropdownData: [
                      {key: 'спальни',value: '2'},
                      {key: 'кровати',value: '2'},
                      {key: 'ванные комнаты',value: '0'}]})