extends ../../layout/main

block variables
  - var title = 'Form Elements'
  - var description = 'Form Elements description'

block content
  .container
    include ../../components/logo/logo
    +logo('grey')
    //- all form elements included in layout/main.pug
    .form-elements-wrapper
      .form-elements-container
        +input-field({heading: 'text field', 
                      status: 'default', 
                      type: 'text', 
                      placeholder: 'Email'})
        +input-field({heading: 'text field', 
                      status: 'hover / focus', 
                      type: 'text', 
                      placeholder: 'Email', 
                      value: 'This is pretty awesome',
                      class: 'focused'})
        +input-field({heading: 'dropdown', 
                      status: 'default', 
                      type: 'text', 
                      placeholder: 'Сколько гостей', 
                      value: 'Сколько гостей',
                      class: 'dropdown',
                      isDropdown: true,
                      readonly: 'readonly',
                      whatToDoWithValues: 'count',
                      dropdownData: [
                      {key: 'взрослые',value: '0'},
                      {key: 'дети',value: '0'},
                      {key: 'младенцы',value: '0'}]})
        +input-field({heading: 'masked text field', 
                      status: 'default', 
                      type: 'text',
                      pattern: 'dd.MM.yyyy', 
                      placeholder: 'ДД.ММ.ГГГГ', 
                      value: '',
                      class: ''})
        .date-fields-on-one-row
          +date-field({heading: 'date dropdown', 
                        status: '', 
                        type: 'text',
                        pattern: 'dd.MM.yyyy', 
                        placeholder: 'ДД.ММ.ГГГГ', 
                        value: '',
                        isDropdown: true,
                        class: 'date dropdown'})
          +date-field({heading: 'date dropdown', 
                        status: '', 
                        type: 'text',
                        pattern: 'dd.MM.yyyy', 
                        placeholder: 'ДД.ММ.ГГГГ', 
                        value: '',
                        isDropdown: true,
                        class: 'date dropdown'})

        .form-elements-short-container
          +date-field({heading: 'filter date dropdown', 
                        status: '', 
                        type: 'text',
                        pattern: 'dd.MM.yyyy', 
                        placeholder: 'ДД.ММ.ГГГГ', 
                        value: '',
                        isDropdown: true,
                        class: 'date dropdown'})
          +input-field-subscription({heading: 'subscription text field', 
                                    status: '', 
                                    type: 'email', 
                                    placeholder: 'Email', 
                                    value: '',
                                    class: ''})

        br
        .form-elements-short-container
          +input-field({heading: 'dropdown', 
                        status: 'default', 
                        type: 'text', 
                        placeholder: 'Комнаты', 
                        value: 'Комнаты',
                        class: 'dropdown',
                        isDropdown: true,
                        readonly: 'readonly',
                        whatToDoWithValues: 'toString',
                        dropdownData: [
                        {key: 'спальни',value: '2'},
                        {key: 'кровати',value: '2'},
                        {key: 'ванные комнаты',value: '0'}]})
          +input-field({heading: 'dropdown', 
                      status: 'default', 
                      type: 'text', 
                      placeholder: 'Комнаты', 
                      value: 'Комнаты',
                      class: 'dropdown focused',
                      isDropdown: true,
                      readonly: 'readonly',
                      whatToDoWithValues: 'toString',
                      dropdownData: [
                      {key: 'спальни',value: '2'},
                      {key: 'кровати',value: '2'},
                      {key: 'ванные комнаты',value: '0'}]})
      
      .form-elements-container
        .h3-ref Checkbox Buttons
        // id name headingText paragraphText
        .form-elements-short-container
          +checkbox({ id: 'checkboxId1', 
                      name: 'inputName',
                      headingText: 'Можно курить',
                      paragraphText: '',
                      isChecked: false})
          +checkbox({ id: 'checkboxId2', 
                      name: 'inputName',
                      headingText: 'Можно с питомцами',
                      paragraphText: '',
                      isChecked: true})
          +checkbox({ id: 'checkboxId3', 
                      name: 'inputName',
                      headingText: 'Можно пригласить гостей (до 10 человек)',
                      paragraphText: '',
                      isChecked: true})

        .h3-ref radio Buttons
        // id name headingText paragraphText
        .form-elements-short-container.radio-container
          +radio({id: 'radioId1', 
                  name: 'inputName',
                  headingText: 'Женщина',
                  paragraphText: '',
                  isChecked: true})
          +radio({id: 'radioId2', 
                  name: 'inputName',
                  headingText: 'Мужчина',
                  paragraphText: '',
                  isChecked: false})
        
        .h3-ref toggle
        // id name headingText paragraphText
        .form-elements-short-container
          +toggle({id: 'toggleId1', 
                  name: 'inputName',
                  headingText: 'Получать спецпредложения',
                  paragraphText: '',
                  isChecked: true})
          +toggle({id: 'toggleId2', 
                  name: 'inputName',
                  headingText: 'Получать спецпредложения',
                  paragraphText: '',
                  isChecked: false})
        
        .h3-ref like button
        // id name headingText paragraphText
        .form-elements-short-container.like-container
          +like({id: 'likeId1', 
                  name: 'inputName',
                  likesTotal: 2,
                  isChecked: false})
          +like({id: 'likeId2', 
                  name: 'inputName',
                  likesTotal: 12,
                  isChecked: true})