include ../text/text

// id name headingText paragraphText isChecked
mixin checkbox(props)
  -var elId = props.id;
  -var elName = props.name;
  -var elHeadingText = props.headingText;
  -var elParagraphText = props.paragraphText;
  -var elIsChecked = props.isChecked;


  label(for=elId).checkbox
    input(type="checkbox", name=elName, id=elId, checked=elIsChecked)
    .checkbox-custom
    .checkbox-text
      if elParagraphText !== ''
        span.checkbox-text_heading #{elHeadingText}
        span.checkbox-text_paragraph #{elParagraphText}
      else
        span #{elHeadingText}